{
  "$schema": "./node_modules/turbo/schema.json",
  "globalEnv": [
    "BETTER_AUTH_SECRET",
    "DATABASE_URL",
    "MAILER_API_KEY",
    "STRIPE_SECRET_KEY",
    "STRIPE_WEBHOOK_SECRET",
    "STRIPE_PLUS_MONTHLY_PRICE_ID",
    "STRIPE_PLUS_YEARLY_PRICE_ID",
    "GOOGLE_CLIENT_ID",
    "GOOGLE_CLIENT_SECRET",
    "APPLE_TEAM_ID",
    "APPLE_CLIENT_ID",
    "APPLE_KEY_ID",
    "APPLE_PRIVATE_KEY",
    "AI_GATEWAY_API_KEY",
    "AI_MODEL_COURSE_SUGGESTIONS"
  ],
  "tasks": {
    "//#format": { "cache": false },
    "//#lint": {},
    "build": {
      "cache": false,
      "dependsOn": ["^build", "^db:deploy"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "db:deploy": {
      "cache": false
    },
    "db:generate": {
      "cache": false
    },
    "db:migrate": {
      "cache": false,
      "persistent": true
    },
    "dev": {
      "cache": false,
      "dependsOn": ["^db:generate"],
      "persistent": true
    },
    "i18n": {},
    "start": {
      "cache": false,
      "persistent": true
    },
    "test": {},
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "typecheck": {}
  },
  "ui": "tui"
}
