{
  "$schema": "./node_modules/turbo/schema.json",
  "globalEnv": [
    "AI_GATEWAY_API_KEY",
    "AI_MODEL_ALTERNATIVE_TITLES",
    "AI_MODEL_CHAPTER_LESSONS",
    "AI_MODEL_COURSE_CATEGORIES",
    "AI_MODEL_COURSE_CHAPTERS",
    "AI_MODEL_COURSE_DESCRIPTION",
    "AI_MODEL_COURSE_SUGGESTIONS",
    "APPLE_CLIENT_ID",
    "APPLE_KEY_ID",
    "APPLE_PRIVATE_KEY",
    "APPLE_TEAM_ID",
    "BETTER_AUTH_SECRET",
    "BLOB_READ_WRITE_TOKEN",
    "DATABASE_URL_UNPOOLED",
    "DATABASE_URL",
    "GOOGLE_CLIENT_ID",
    "GOOGLE_CLIENT_SECRET",
    "MAILER_API_KEY",
    "NEXT_PUBLIC_ADMIN_APP_URL",
    "NEXT_PUBLIC_AUTH_APP_URL",
    "NEXT_PUBLIC_EDITOR_APP_URL",
    "NEXT_PUBLIC_MAIN_APP_URL",
    "OPENAI_API_KEY",
    "REVALIDATE_SECRET",
    "STRIPE_SECRET_KEY",
    "STRIPE_WEBHOOK_SECRET"
  ],
  "tasks": {
    "//#format": { "cache": false },
    "//#lint": {},
    "build": {
      "cache": false,
      "dependsOn": ["^db:generate", "^build", "^db:deploy"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "db:deploy": {
      "cache": false,
      "dependsOn": ["^db:deploy"]
    },
    "db:generate": {
      "cache": false,
      "dependsOn": ["^db:generate"],
      "outputs": ["src/generated/**"]
    },
    "db:migrate": {
      "cache": false,
      "dependsOn": ["^db:migrate"]
    },
    "db:studio": {
      "cache": false,
      "dependsOn": ["^db:studio"]
    },
    "db:test:setup": {
      "cache": false,
      "dependsOn": ["^db:test:setup"]
    },
    "dev": {
      "cache": false,
      "dependsOn": ["^db:generate", "^dev"],
      "persistent": true
    },
    "start": {
      "cache": false,
      "dependsOn": ["^start"],
      "persistent": true
    },
    "test": {
      "dependsOn": ["^db:test:setup", "^test"]
    },
    "test:watch": {
      "cache": false,
      "dependsOn": ["^db:test:setup"],
      "persistent": true
    },
    "typecheck": {
      "dependsOn": ["^typecheck"]
    }
  },
  "ui": "tui"
}
