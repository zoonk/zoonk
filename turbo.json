{
  "$schema": "./node_modules/turbo/schema.json",
  "globalEnv": [
    "AI_GATEWAY_API_KEY",
    "AI_MODEL_ACTIVITY_BACKGROUND",
    "AI_MODEL_ACTIVITY_EXPLANATION",
    "AI_MODEL_ACTIVITY_EXPLANATION_QUIZ",
    "AI_MODEL_ACTIVITY_MECHANICS",
    "AI_MODEL_ACTIVITY_EXAMPLES",
    "AI_MODEL_ALTERNATIVE_TITLES",
    "AI_MODEL_CHAPTER_LESSONS",
    "AI_MODEL_COURSE_CATEGORIES",
    "AI_MODEL_COURSE_CHAPTERS",
    "AI_MODEL_COURSE_DESCRIPTION",
    "AI_MODEL_COURSE_SUGGESTIONS",
    "AI_MODEL_LESSON_ACTIVITIES",
    "AI_MODEL_LESSON_KIND",
    "AI_MODEL_STEP_VISUAL",
    "APPLE_CLIENT_ID",
    "APPLE_KEY_ID",
    "APPLE_PRIVATE_KEY",
    "APPLE_TEAM_ID",
    "BETTER_AUTH_SECRET",
    "BLOB_READ_WRITE_TOKEN",
    "DATABASE_URL_UNPOOLED",
    "DATABASE_URL",
    "E2E_TESTING",
    "GIT_REPO_OWNER",
    "GOOGLE_CLIENT_ID",
    "GOOGLE_CLIENT_SECRET",
    "MAILER_API_KEY",
    "OPENAI_API_KEY",
    "REVALIDATE_SECRET",
    "STRIPE_SECRET_KEY",
    "STRIPE_WEBHOOK_SECRET",
    "TRUSTED_ORIGINS",
    "VERCEL_ENV",
    "VERCEL_GIT_REPO_OWNER",
    "VERCEL_URL"
  ],
  "tasks": {
    "//#format": { "cache": false },
    "//#lint": {},
    "build": {
      "dependsOn": ["^db:generate", "^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "build:e2e": {
      "outputs": [".next-e2e/**", "!.next-e2e/cache/**"]
    },
    "db:deploy": {
      "cache": false
    },
    "db:generate": {
      "cache": false,
      "dependsOn": ["^db:deploy", "^db:generate"],
      "outputs": ["src/generated/**"]
    },
    "db:setup:test": {
      "cache": false,
      "dependsOn": ["^db:setup:test"]
    },
    "dev": {
      "cache": false,
      "dependsOn": ["^db:generate", "^dev"],
      "persistent": true
    },
    "e2e": {
      "passThroughEnv": ["PLAYWRIGHT_*", "E2E_BASE_URL"]
    },
    "start": {
      "cache": false,
      "dependsOn": ["^start"],
      "persistent": true
    },
    "test": {
      "dependsOn": ["^db:setup:test", "^test"]
    },
    "test:watch": {
      "cache": false,
      "dependsOn": ["^db:setup:test"],
      "persistent": true
    },
    "typecheck": {
      "dependsOn": ["^typecheck"]
    }
  },
  "ui": "tui"
}
