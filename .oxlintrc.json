{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "plugins": ["typescript", "oxc", "react", "nextjs", "import", "unicorn", "jsx-a11y", "vitest"],
  "env": {
    "browser": true,
    "es2024": true,
    "node": true
  },
  "categories": {
    "correctness": "error",
    "perf": "error",
    "suspicious": "error"
  },
  "rules": {
    "eslint/func-style": ["error", "declaration", { "allowArrowFunctions": true }],
    "eslint/id-length": [
      "error",
      { "min": 2, "exceptions": ["i", "j", "x", "y", "z", "_", "a", "b", "t", "T"] }
    ],
    "eslint/init-declarations": "off",
    "eslint/max-params": "off",
    "eslint/max-statements": ["error", { "ignoreTopLevelFunctions": true, "max": 20 }],
    "eslint/no-magic-numbers": [
      "error",
      {
        "ignoreArrayIndexes": true,
        "ignore": [-1, 0, 1, 2, 7, 10, 12, 24, 30, 60, 100, 365, 1000, 1024, 3600, 86400]
      }
    ],
    "import/no-named-as-default": "off",
    "eslint/no-ternary": "off",
    "eslint/prefer-destructuring": "off",
    "eslint/sort-imports": ["error", { "ignoreDeclarationSort": true }],
    "import/consistent-type-specifier-style": ["error", "prefer-inline"],
    "import/exports-last": "off",
    "import/group-exports": "off",
    "import/no-named-export": "off",
    "import/no-unassigned-import": [
      "error",
      { "allow": ["**/*.css", "server-only", "dotenv/config"] }
    ],
    "import/prefer-default-export": "off",
    "jest/no-untyped-mock-factory": "off",
    "jsx-a11y/no-autofocus": "off",
    "oxc/no-map-spread": "off",
    "react/jsx-handler-names": "off",
    "jsx-max-depth": ["error", { "max": 5 }],
    "react/react-in-jsx-scope": "off",
    "typescript/consistent-type-definitions": ["error", "type"],
    "typescript/no-unsafe-type-assertion": "error",
    "vitest/prefer-called-times": "off",
    "vitest/require-hook": "off",
    "vitest/require-top-level-describe": "off",

    // style rules
    "eslint/curly": "error",
    "eslint/no-continue": "error",
    "eslint/no-duplicate-imports": "error",
    "eslint/no-nested-ternary": "error",
    "eslint/sort-keys": "error",
    "import/no-namespace": "error",
    "vitest/prefer-describe-function-title": "error",
    "vitest/prefer-to-be-falsy": "error",
    "vitest/prefer-to-be-truthy": "error",
    "react/jsx-boolean-value": "error"
  },
  "overrides": [
    {
      "files": ["apps/evals/**/*.ts", "apps/evals/**/*.tsx"],
      "rules": {
        "eslint/no-magic-numbers": "off",
        "typescript/no-unsafe-type-assertion": "off"
      }
    },
    {
      "files": ["**/seed/**", "**/seed.ts"],
      "rules": {
        "eslint/max-statements": "off",
        "eslint/no-magic-numbers": "off",
        "import/no-namespace": "off"
      }
    },
    {
      "files": ["*.test.ts"],
      "rules": {
        "eslint/max-statements": "off",
        "eslint/no-magic-numbers": "off",
        "import/no-namespace": "off",
        "vitest/require-hook": "error",
        "vitest/require-top-level-describe": "error"
      }
    },
    {
      "files": ["packages/ui/src/components/**/*.tsx"],
      "rules": {
        "eslint/no-magic-numbers": "off",
        "import/no-namespace": "off"
      }
    }
  ],
  "ignorePatterns": [
    "node_modules",
    ".next",
    ".next-e2e",
    ".claude/skills",
    ".cursor/skills",
    ".opencode/skills",
    ".github/skills",
    "dist",
    "build",
    "**/generated/**",
    "**/messages/**",
    ".turbo",
    "pnpm-lock.yaml"
  ]
}
