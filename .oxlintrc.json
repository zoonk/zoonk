{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "plugins": [
    "typescript",
    "oxc",
    "react",
    "nextjs",
    "import",
    "unicorn",
    "jsx-a11y",
    "vitest"
  ],
  "categories": {
    "correctness": "error",
    "perf": "error"
  },
  "rules": {
    "jsx-a11y/no-autofocus": "off",
    "oxc/no-map-spread": "off"
  },
  "ignorePatterns": [
    "node_modules",
    ".next",
    ".next-e2e",
    ".agents",
    ".claude",
    ".cursor",
    ".opencode",
    ".github/skills",
    "dist",
    "build",
    "**/generated/**",
    "**/messages/**",
    ".turbo"
  ]
}
