{
  "$schema": "./node_modules/knip/schema.json",
  "ignore": ["**/*.d.**.ts", "**/codec.ts"],
  "ignoreWorkspaces": ["packages/e2e!", "packages/testing!"],
  "ignoreBinaries": ["stripe", "build-and-start", "turbo!"],
  "ignoreDependencies": [
    "@prisma/client",
    "@tailwindcss/postcss",
    "@types/react",
    "@types/react-dom",
    "@typescript/native-preview",
    "next",
    "next-intl",
    "postcss-load-config",
    "raw-loader",
    "tsx"
  ],
  "includeEntryExports": true,
  "tags": ["-lintignore", "-internal", "-public"],
  "workspaces": {
    "apps/api": {
      "ignore": ["src/app/.well-known/workflow/**"],
      "project": ["src/**/*.{ts,tsx}!", "e2e/**/*.ts"]
    },
    "apps/editor": {
      "ignore": ["e2e/mocks/**"],
      "project": ["src/**/*.{ts,tsx}!", "e2e/**/*.ts"]
    },
    "apps/main": {
      "entry": ["src/app/privacy/*.mdx", "src/app/terms/*.mdx"],
      "project": ["src/**/*.{ts,tsx}!", "e2e/**/*.ts"]
    },
    "packages/core": {
      "project": ["src/**/*.ts!"]
    },
    "packages/db": {
      "entry": ["prisma.config.ts"],
      "ignore": ["src/prisma/seed.ts", "src/prisma/seed/**"],
      "ignoreDependencies": ["@zoonk/utils"],
      "prisma": false
    },
    "packages/ui": {
      "includeEntryExports": false
    }
  }
}
