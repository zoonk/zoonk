{
  "name": "zoonk",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "postinstall": "prisma generate",
    "dev": "next dev --turbopack",
    "build": "prisma migrate deploy && next build --turbopack",
    "start": "next start",
    "type-check": "next typegen && tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "i18n": "i18n-check -s en -l messages -u app lib components -f next-intl",
    "stripe:listen": "stripe listen --forward-to http://localhost:3000/api/auth/stripe/webhook",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset"
  },
  "dependencies": {
    "@better-auth/stripe": "1.3.26",
    "@prisma/adapter-pg": "6.17.0",
    "@prisma/client": "6.17.0",
    "@prisma/extension-accelerate": "2.0.2",
    "@tabler/icons-react": "3.35.0",
    "@vercel/analytics": "1.5.0",
    "@vercel/functions": "3.1.0",
    "@zoonk/ai": "workspace:*",
    "@zoonk/ui": "workspace:*",
    "@zoonk/utils": "workspace:*",
    "ai": "5.0.62",
    "better-auth": "1.3.26",
    "jose": "6.1.0",
    "lucide-react": "0.544.0",
    "next": "canary",
    "next-intl": "4.3.9",
    "pg": "8.16.3",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "server-only": "0.0.1",
    "stripe": "18.5.0",
    "zod": "4.1.12"
  },
  "devDependencies": {
    "@lingual/i18n-check": "0.8.9",
    "@mdx-js/loader": "3.1.1",
    "@mdx-js/react": "3.1.1",
    "@next/mdx": "canary",
    "@testing-library/dom": "10.4.1",
    "@testing-library/react": "16.3.0",
    "@types/mdx": "2.0.13",
    "@types/node": "^22",
    "@types/pg": "8.15.5",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.1",
    "@vitejs/plugin-react": "5.0.3",
    "@zoonk/tsconfig": "workspace:*",
    "jsdom": "27.0.0",
    "prisma": "6.17.0",
    "raw-loader": "4.0.2",
    "tsx": "4.20.5",
    "typescript": "^5",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.2.4"
  }
